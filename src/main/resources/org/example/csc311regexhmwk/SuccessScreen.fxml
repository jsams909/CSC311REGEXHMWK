<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="successRoot" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.csc311regexhmwk.SuccessController">
    <children>
        <GridPane fx:id="successGrid" alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Text fx:id="successMessage" text="Registration Successful!" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="Tahoma Bold" size="20.0" />
                    </font>
                </Text>
                <Text fx:id="userInfo" text="Welcome!" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="Tahoma" size="16.0" />
                    </font>
                </Text>
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseButton" text="Close" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </children>
</StackPane>